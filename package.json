{
  "name": "@wind-wine/goo-cli",
  "version": "1.0.0",
  "description": "",
  "main": "./lib/index.js",
  "scripts": {
    "dev:comment": "启动开发环境",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "prettier:comment": "自动格式化 src 目录下的所有 .ts 文件",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "commit:comment": "引导设置规范化的提交信息",
    "commit": "cz",
    "build:comment": "构建",
    "build": "npm run eslint && npm run prettier && rd /Q /S lib && tsc --build",
    "eslint:comment": "使用 ESLint 检查并自动修复 src 目录下所有扩展名为 .ts 的文件",
    "eslint": "eslint --fix src --ext .ts --max-warnings=0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "files": ["package.json", "README.md", "lib"],
  "lint-staged": {
    "*.ts": ["npm run eslint", "npm run prettier"]
  },
  "bin": {
    "goo-cli": "./bin/goo-cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/feiyafeiyadou/goo-cli.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/feiyafeiyadou/goo-cli/issues"
  },
  "publishConfig": {
    "access": "public"
},
  "homepage": "https://github.com/feiyafeiyadou/goo-cli#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.42.0",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.3",
    "prettier": "^2.8.8",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "chalk": "^5.2.0",
    "clear-console": "^1.1.0",
    "commander": "^10.0.1",
    "inquirer": "^9.2.7",
    "shelljs": "^0.8.5"
  }
}
